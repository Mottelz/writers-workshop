<!doctype html>
<html lang="en">
<% include ../partials/head.ejs %>
<body>
<header>
    <h1>Sasson Writer's Workshop</h1>
</header>
<% include ../partials/nav.ejs %>
<main>
    <section class="section-header">
        <h2>My Stories</h2>
    </section>
    <% for(i=0; i<stories.length; i++) {%>
    <section class="section-block" style="width: 100%;">
        <div class="story-excerpt">
            <h3><%= stories[i].title %></h3>
            <h4><span class="strong"><a href="" class="category-link"><%= stories[i].category%></a></span></h4>
            <p class="body-excerpt"><%- stories[i].blurb.replace(new RegExp('\n', 'g'), '<br>')  + '...' %></p>
        </div>
        <div class="story-additional">
            <h4>Added <%= moment(stories[i].created).format("MMM Do, YYYY") %></h4>
            <!--<h4>Review Count <span class="strong">0</span></h4>-->
            <button class="button" onclick="location.href='/story/<%= stories[i].id %>'">See Reviews</button>
        </div>
    </section>
    <%}%>
</main>
<% include ../partials/footer.ejs%>
</body>
</html>